@model Conta

<!DOCTYPE html>

<html lang="pt-br">

    <head>

        <meta charset="utf-8">

        <title> - Update page - </title>


    </head>

    <body>

        <h1> - Update - </h1>

        <!-- UPDATE FORM -->
        <form asp-controller="Conta" asp-action="Update" method="post">

            <fieldset>

                <legend> Update</legend>

                <!-- Validation Errors -->
                <div asp-validation-summary="ModelOnly"></div>

                <!-- READONLY ID , USED TO RETRIVE ID AFTER -->
                <label asp-for="Id">Id</label>
                <input asp-for="Id" readonly name="IdTxt" type="text" />
                <input asp-for="Id" name="HdnTxt" type="hidden" />

                <!-- FIRST NAME -->
                <label asp-for="FirstName"> Name </label>
                <input asp-for="FirstName" type="text" placeholder="First name" />

                <!-- SECOND NAME -->
                <label asp-for="SecondName"> Second name </label>
                <input asp-for="SecondName" type="text" placeholder="Second name" />

                <!-- CPF -->
                <label asp-for="Cpf"> Cpf </label>
                <input asp-for="Cpf" type="text" placeholder="CPF" />

                <!-- SUBMIT -->
                <input type="submit" value="Update" />

            </fieldset>

        </form>

    </body>

</html>