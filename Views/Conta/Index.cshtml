@{


    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model List<Conta>

<div class="container">

    <h1> - Contas - </h1>

    <hr />

    <a asp-action="Create" asp-controller="Conta" class="btn btn-primary" >Click here to register a new account</a>

    <table class="table table-dark">

        <thead>

            <tr>

                <th scope="col"> ID </th>
                <th scope="col"> First name </th>
                <th scope="col"> Second name </th>
                <th scope="col"> CPF </th>
                <th scope="col"> Creation date </th>

                <th scope="col"></th>

            </tr>

        </thead>

        <!-- LISTING ALL ACCOUNTS -->
        <tbody>

            @foreach (Conta y in Model)
            {

                <tr>

                    <th>@y.Id</th>

                    <th>@y.FirstName</th>

                    <th>@y.SecondName</th>

                    <th>@y.Cpf</th>

                    <th>@y.CreationDate</th>

                    <th>

                        <a asp-action="Delete" asp-controller="Conta" asp-route-id="@y.Id" class="btn btn-danger"> Delete </a>
                        <a asp-action="Update" asp-controller="Conta" asp-route-id="@y.Id" class="btn btn-info"> Update </a>

                    </th>

                </tr>

            }

        </tbody>

    </table>

</div>