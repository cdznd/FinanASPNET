@{

    List<Conta> Contas = ViewBag.Contas;
    List<Categoria> Categorias = ViewBag.Categorias;

    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model Lancamento

<div class="container">

    <h1 class="display-3">Atualizar lancamento</h1>

    <!-- REGISTER FORM -->
    <form asp-controller="Lancamento" asp-action="Update" method="post">

        <fieldset>

            <!-- Validation Errors -->
            <div asp-validation-summary="ModelOnly"></div>

            <legend> Register </legend>

            <!-- Conta -->
            <div class="form-group">

                <label asp-for="ContaId">Conta</label>

                <!-- SELECT CONTA -->
                <select asp-for="ContaId" class="form-control">

                    @foreach (Conta x in Contas)
                    {

                        <option value="@x.Id"> @x.FirstName </option>

                    }

                </select>

            </div>

            <!-- Categoria -->
            <div class="form-group">

                <label asp-for="CategoriaId">Categoria</label>

                <select asp-for="CategoriaId" class="form-control">

                    @foreach (Categoria x in Categorias)
                    {

                        <option value="@x.Id"> @x.Nome </option>

                    }

                </select>

            </div>

            <!-- Descrição -->
            <div class="form-group">

                <!-- Descricao -->
                <label asp-for="Description">Descricao</label>
                <input asp-for="Description" type="text" placeholder="Descricao" class="form-control" />

            </div>

            <!-- Valor -->
            <div class="form-group">

                <label asp-for="Valor"> Valor </label>
                <input asp-for="Valor" type="text" placeholder="Valor" class="form-control" />

            </div>

            <span asp-validation-for="Description"></span>

            <!-- SUBMIT -->
            <input type="submit" value="Atualizar lancamento" class="btn btn-primary" />

        </fieldset>

    </form>

</div>