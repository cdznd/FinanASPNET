@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model List<Lancamento>

<div class="container">

    <h1> - Lançamentos - </h1>

    <a asp-action="Create" asp-controller="Lancamento" class="btn btn-primary"> Click here to create a new lançamento </a>

    <table class="table table-dark">

        <thead>

            <tr>

                <th scope="col"> ID </th>
                <th scope="col"> Nome da categoria </th>
                <th scope="col"> Conta </th>
                <th scope="col"> Descricao </th>
                <th scope="col"> Valor </th>
                <th scope="col"> Creation date </th>

                <th scope="col"></th>

            </tr>

        </thead>

        <!-- LISTING ALL ACCOUNTS -->
        <tbody>

            @foreach (Lancamento y in Model)
            {

                <tr>

                    <th>@y.Id</th>

                    <th>@y.Categoria.Nome</th>

                    <th>@y.Conta.FirstName</th>

                    <th>@y.Description</th>

                    <th>@y.Valor</th>

                    <th>@y.CreationDate</th>

                    <th>

                        <a asp-action="Delete" asp-controller="Lancamento" asp-route-id="@y.Id" class="btn btn-danger"> Delete </a>
                        <a asp-action="Update" asp-controller="Lancamento" asp-route-id="@y.Id" class="btn btn-info"> Update </a>

                    </th>

                </tr>

            }

        </tbody>

    </table>

</div>



