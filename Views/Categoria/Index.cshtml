@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model List<Categoria>

<div class="container">

    <h1> - Categorias - </h1>

    <a asp-action="Create" asp-controller="Categoria" class="btn btn-primary" >Click here to create a new category</a>

    <table class="table table-dark">

        <thead>

            <tr>

                <th scope="col"> ID </th>
                <th scope="col"> Nome </th>
                <th scope="col"> N lancamentos </th>
                <th scope="col"> Creation Date </th>

                <th scope="col"></th>

            </tr>

        </thead>

        <tbody>

            @foreach (Categoria y in Model)
            {

                <tr>

                    <th>@y.Id</th>
                    <th>@y.Nome</th>
                    <th> Sem lancamento na categoria ainda </th>
                    <th>@y.CreationDate</th>

                    <th>

                        <a asp-action="Delete" asp-controller="Categoria" asp-route-id="@y.Id" class="btn btn-danger"> Delete </a>
                        <a asp-action="Update" asp-controller="Categoria" asp-route-id="@y.Id" class="btn btn-info"> Update </a>

                    </th>

                </tr>

            }

        </tbody>

    </table>

 </div>

