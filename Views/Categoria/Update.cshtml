@model Categoria

<!DOCTYPE html>

<html lang="pt-br">

<head>

    <meta charset="utf-8">

    <title> - Atualizar categoria </title>

</head>

<body>

    <h1> Atualizar categoria </h1>

    <!-- REGISTER FORM -->
    <form asp-controller="Categoria" asp-action="Update" method="post">

        <fieldset>

            <div asp-validation-summary="ModelOnly"></div>

            <legend> Atualizar categoria </legend>

            <!-- ID -->
            <label asp-for="Id">Id</label>
            <input asp-for="Id" readonly />
            <input asp-for="Id" type="hidden" />

            <!-- Nome -->
            <label asp-for="Nome">Nome da categoria</label>
            <input asp-for="Nome" type="text" placeholder="Nome da categoria" />

            <span asp-validation-for="Nome"></span>

            <input type="submit" value="Atualizar categoria" />

        </fieldset>

    </form>

</body>

</html>
