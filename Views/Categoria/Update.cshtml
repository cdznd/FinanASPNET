@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model Categoria

<div class="container">

    <h1 class="display-3"> Atualizar categoria </h1>

    <!-- REGISTER FORM -->
    <form asp-controller="Categoria" asp-action="Update" method="post">

        <fieldset>

            <div asp-validation-summary="ModelOnly"></div>

            <legend> Atualizar categoria </legend>

            <div class="form-group">

                <!-- Nome -->
                <label asp-for="Nome">Nome da categoria</label>
                <input asp-for="Nome" type="text" placeholder="Nome da categoria" />

            </div>

            <span asp-validation-for="Nome"></span>

            <input type="submit" value="Atualizar categoria" class="btn btn-primary"/>

        </fieldset>

    </form>

</div>